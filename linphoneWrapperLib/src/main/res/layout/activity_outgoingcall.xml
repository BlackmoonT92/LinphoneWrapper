<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/material_padding_small"
        android:gravity="center_horizontal"
        android:padding="@dimen/material_padding_medium"
        android:text="@string/outgoing"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_title_size" />

    <TextView
        android:id="@+id/tvDialingNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:gravity="center_horizontal"
        android:padding="@dimen/material_padding_small"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_primary_size" />

    <ImageView
        android:id="@+id/ivHangUp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/material_padding_large"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_end_call" />


</RelativeLayout>
